# --- Authentification Kraken ---
KRAKEN_API_KEY=xxxxxxxxxxxxxxxx
KRAKEN_API_SECRET=xxxxxxxxxxxxxxxx

# --- Paramètres généraux ---
# Devise fiat de base pour plafonds et calculs
BASE_FIAT=EUR

# --- Données & simulation ---
# Intervalle des bougies en minutes (240 = 4h)
SIM_INTERVAL_MIN=240
# Nombre de bougies chargées en simulation
SIM_CANDLES=500

# --- Exécution ---
# Si true → aucun ordre réel n’est envoyé à Kraken
DRY_RUN=true

# --- Stockage & rétention ---
# Fichier SQLite pour stocker les données
DATA_DB_PATH=./data.db

# Périodes de rétention
# 0 → FULL_DAYS : garder toutes les bougies
RETENTION_FULL_DAYS=30
# FULL_DAYS → HALF_DAYS : ne garder qu’1 bougie sur 2
RETENTION_HALF_DAYS=90
# HALF_DAYS → SIXTH_DAYS : ne garder qu’1 bougie sur 6
RETENTION_SIXTH_DAYS=180

# --- Logs ---
# Mode de logging : "console" (par défaut) ou "files"
LOG_MODE=console

# Répertoire où stocker les logs si LOG_MODE=files
LOG_DIR=./var/logs

# Activer la sortie JSON (true/false)
LOG_JSON=false

# Activer les logs DEBUG (true/false)
DEBUG=false

# Nom du fichier pour les logs d'information (INFO/WARN/DEBUG)
LOG_INFO_NAME=app.log

# Nom du fichier pour les logs d'erreur (ERR)
LOG_ERROR_NAME=error.log

# --- Fetch bougies ---
# Intervalle entre deux récupérations (en secondes)
FETCH_INTERVAL_SEC=300
# Lancer un fetch immédiatement au démarrage (true/false)
FETCH_ON_START=true
